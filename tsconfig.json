{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@utils/*": ["src/utils/*"],
            "@actors/*": ["src/actors/*"],
            "@questions/*": ["src/question/*"],
            "@tasks/*": ["src/task/*"]
        }
    },
    "include": ["test/**/*.ts", "src/**/*.ts"]
}
